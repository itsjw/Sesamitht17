    <!--Banner-->
<section class="hero is-dark is-large">
    <div class="hero-body" id="introduktion-banner">
        <div class="container">
            <h1 class="title has-text-centered is-size-2 has-text-white" id="samarbetspartners-title">
                Ska du studera ekonomi, statistik eller informatik?
            </h1>
